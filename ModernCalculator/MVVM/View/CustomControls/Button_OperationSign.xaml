<UserControl x:Class="ModernCalculator.MVVM.View.CustomControls.Button_OperationSign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCalculator.MVVM.View.CustomControls"
             
             x:Name="Root"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Button Click="Button_Click" 
            Content="{Binding Operation, ElementName=Root}" FontFamily="Cascadia Code" FontSize="25"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="5 5"
            Foreground="#000000" Background="#DCE14C" 
            BorderThickness="0"/>
</UserControl>
