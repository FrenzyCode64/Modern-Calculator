<UserControl x:Class="ModernCalculator.MVVM.View.CustomControls.Button_Result"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCalculator.MVVM.View.CustomControls"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Click="Button_Click" 
            Content="=" FontFamily="/Fonts/#Cascadia Code" FontSize="25"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
            Width="55" Height="55"
            Foreground="#FFFFFF" Background="#D28E0C" 
            BorderThickness="5" BorderBrush="#FFFFFF">
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Button.Resources>
    </Button>
</UserControl>
