<UserControl x:Class="ModernCalculator.MVVM.View.CustomControls.Button_Termination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernCalculator.MVVM.View.CustomControls"
             
             x:Name="Root"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Content="{Binding Operation, ElementName=Root}" FontFamily="Cascadia Code" FontSize="25"
            VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
            Width="65" Height="65"
            Foreground="#FFFFFF" Background="#E5408E" 
            BorderThickness="5" BorderBrush="#FFFFFF">
        <Button.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Button.Resources>
    </Button>
</UserControl>
